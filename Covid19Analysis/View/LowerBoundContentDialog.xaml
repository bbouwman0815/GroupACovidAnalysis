<ContentDialog
    x:Class="Covid19Analysis.View.LowerBoundContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Set a lower bound for positive tests"
    PrimaryButtonText="Set"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="lowerBoundTextBox" HorizontalAlignment="Left" Margin="10,23,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" PlaceholderText="1000" Grid.ColumnSpan="2"/>
    </Grid>
</ContentDialog>
