<ContentDialog
    x:Class="Covid19Analysis.View.HistogramBinContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Covid19Analysis.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Set Histogram Bin Size:"
    PrimaryButtonText="Set"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <TextBox x:Name="binSizeTextBox" HorizontalAlignment="Left" Margin="0,35,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" PlaceholderText="500"/>
    </Grid>
</ContentDialog>
